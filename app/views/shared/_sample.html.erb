<% link_style = "padding: 2px 4px; font-size: 90%; color: #c7254e; background-color: #f9f2f4; border-radius: 4px; text-decoration: none" %>
<table width="100%" border="0" cellspacing="0" cellpadding="0" style="padding: 9px 14px; margin-bottom: 14px; background-color: #f7f7f9; border: 1px solid #e1e1e8; border-radius: 4px; color: #999;">
  <tr>
    <td>
      <p>
        <strong style="color: #1b809e">To: </strong>
        <% wrap_each_word(@to) do |email| %>
          <a href="#" style="<%= link_style %>"><%= email %></a>
        <% end %>
      </p>
      <p>
        <strong style="color: #1b809e">CC: </strong>
        <% wrap_each_word(@cc) do |email| %>
          <a href="#" style="<%= link_style %>"><%= email %></a>
        <% end %>
      </p>
      <p>
        <strong style="color: #1b809e">BCC: </strong>
        <% wrap_each_word(@bcc) do |email| %>
          <a href="#" style="<%= link_style %>"><%= email %></a>
        <% end %>
      </p>
    </td>
  </tr>
</table>
