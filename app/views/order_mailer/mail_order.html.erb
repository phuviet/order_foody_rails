<table>
  <caption>Information Order</caption>
  <thead>
    <tr>
      <th>Receiver Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.receiver %></td>
      <td><%= @order.address %></td>
      <td><%= @order.phone %></td>
      <td><%= @order.status %></td>
    </tr>
  </tbody>
</table>

<table>
  <caption>Products</caption>
  <thead>
    <tr>
      <th>No.</th>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% total = 0 %>
    <% for i in 0...@order_items.size do %>
    <% product = @order_items[i].product %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= @order_items[i].quantity %></td>
      <td><%= @order_items[i].total_price %></td>
      <% total += @order_items[i].total_price.to_f %>
    </tr>
    <% end %>
    <tr>
      <td colspan="4">Total: $<%= total %></td>
    </tr>
  </tbody>
</table>

<p>Items in your order will be shipped soon.</p>
